<section class='main-form-container'>
  
  <section class="new-event-form">
 <!--    <h2>Sign up</h2> -->

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

       <p class='event-form-label'>
        <%= f.label :firstname, 'First Name' %></p>
      <%= f.text_field :firstname, class: 'event-form-input', placeholder: 'first name' %>

      <p class='event-form-label'>
        <%= f.label :lastname, 'Last Name' %></p>
      <%= f.text_field :lastname, class: 'event-form-input', placeholder: 'last name' %>

      <p class='event-form-label'>
        <%= f.label :email %></p>
      <%= f.email_field :email, autocomplete: "off", class: 'event-form-input', placeholder: 'email' %>

      <p class='event-form-label'>
        <%= f.label :password %> <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %></p>
        <%= f.password_field :password, autocomplete: "off", class: 'event-form-input', placeholder: 'password' %>

      <p class='event-form-label'>
        <%= f.label :password_confirmation %></p>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'event-form-input', placeholder: 'confirm your password' %>

      
        <%= f.submit "Sign up", id: 'submit-event' %>
    <% end %>

    <%= render "devise/shared/links" %>
  </section>
</section>
