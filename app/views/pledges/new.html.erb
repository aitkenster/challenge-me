<%= form_for [@event, @pledge], as: :pledge, url: event_pledges_path(@event) do |f| %>
<%= f.label :caption, 'Title' %>
<%= f.text_field :caption %>

<%= f.label :amount, 'Amount' %>
<%= f.text_field :amount %>

<%= f.label :text, 'Info' %>
<%= f.text_field :text %>

<%= f.submit 'Create Pledge'%>

<%end%>